<p id="notice"><%= notice %></p>

<div>
  <table>
    <tr>
      <td>
        <h2>Lunch Meals</h2>
        <% @lunch_meals.each do |meal| %>
          <div>
            <%= meal.day %><br />
            <ul>
              <li><%= meal.meal.title %></li>
              <li><%= meal.meal.description %></li>
            </ul>
          </div>
        <% end %>
      </td>
      <td>
        <h2>Dinner Meals</h2>
        <% @dinner_meals.each do |meal| %>
          <div>
            <%= meal.day %><br />
            <ul>
              <li><%= meal.meal.title %></li>
              <li><%= meal.meal.description %></li>
            </ul>
          </div>
        <% end %>
      </td>
    </tr>
  </table>
</div>

